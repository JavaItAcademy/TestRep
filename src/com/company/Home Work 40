select t.*, s.sport_type, s.s_salary
from
trainers5 t join sport_types5 s on t.sport_id= s.sport_id


create table  visitor5 (
visitor_id integer primary key not null,
visitor_name varchar(50) unique not null,
v_bd date not null,
visitor_gender varchar (10) not null,
sport_id integer not null  references sport_types5(sport_id))


