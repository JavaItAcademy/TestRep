create table visiting6(
visitor_id integer not null references visitor5 (visitor_id),
time_to_visit varchar(10) not null)

create table visiting7(
id integer primary key,
visitor integer not null references visitor5(visitor_id),
visit_time varchar(10),
trainer_id integer not null references trainers4(trainer_id)
)
